<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_height="wrap_content"
 	android:layout_width="wrap_content"
 	android:orientation="vertical"
 	android:padding="25dip"
 	android:id="@+id/bubble"
 	android:visibility="gone">
 	<LinearLayout
 		android:layout_height="wrap_content"
 		android:layout_width="fill_parent"
 		android:orientation="vertical"
 		android:background="@+drawable/bubble"
 		>
 		<RelativeLayout
 			android:layout_height="wrap_content"
 			android:layout_width="fill_parent"
 			android:orientation="horizontal">
 			<LinearLayout
 				android:padding="5dip"
 				android:layout_width="wrap_content"
 				android:layout_height="wrap_content"
 				android:orientation="vertical">
			   	<TextView 
			    	android:text="TextView" 
			    	android:id="@+id/venuename" 
			    	android:layout_height="wrap_content" 
			    	android:textStyle="bold"
			    	android:textSize="18dip"
			    	android:textColor="#000" 
			    	android:layout_width="wrap_content" />
			   	<TextView 
			    	android:text="open for 1h 43m" 
			    	android:id="@+id/venueopenfor" 
			    	android:layout_height="wrap_content"
			    	android:layout_width="wrap_content"
			    	android:textStyle="italic"
			    	android:textColor="#000"/>
		    </LinearLayout>
	        <ImageButton 
	        	android:id="@+id/bubbleclose" 
	        	android:layout_margin="5dip" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content"
	        	android:gravity="right"
	        	android:layout_alignParentRight="true"
	        	android:background="@android:color/transparent"
	        	android:src="@drawable/cross"></ImageButton>
        </RelativeLayout>
	    <TextView 
	    	android:text="Venue type: Pub" 
	    	android:id="@+id/venuetype" 
	    	android:layout_height="wrap_content" 
	    	android:textColor="#000"
			android:layout_width="fill_parent"></TextView>
	    <TextView 
	    	android:text="Entrance fee: Varies" 
	    	android:id="@+id/venuefee" 
	    	android:layout_height="wrap_content" 
	    	android:textColor="#000"
			android:layout_width="fill_parent"></TextView>
	    <TextView 
	    	android:text="Tel: 0207 723 4646" 
	    	android:id="@+id/venuephone" 
	    	android:layout_height="wrap_content" 
	    	android:textColor="#000"
			android:layout_width="fill_parent"></TextView>
	</LinearLayout>
</LinearLayout>
